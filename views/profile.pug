extends layout

block content
  .container
    .page-header.text-center
      h1 #[span.fa.fa-anchor] Profile Page
      a.btn.btn-default.btn-sm(href='/logout') logout
    .row
      // LOCATION INFORMATION
      .col-sm-6
        .card
          .card-block
            .card-title
              h3 #[span.fa.fa-user] local
            .card-text
              p
                strong id
                | : #{user._id}
                br
                strong email
                | : #{user.local.email}
                br
                strong password
                | : #{user.local.password}
                br
            
